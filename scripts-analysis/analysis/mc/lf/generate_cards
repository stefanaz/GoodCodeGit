#!/bin/sh
#
# generate cards
#
# input variables
#
#
# $1: version of data (subdir)
# $2: cards template
#
#
if [ -z $1 ]; then
    echo ""
    echo "Please give data-version and cards file template"
    echo ""
    echo "Usage: generate_cards [version] [template]"
    echo ""
    exit
fi
#
if [ -z $2 ]; then
    echo ""
    echo "Please give data-version and cards file template"
    echo ""
    echo "Usage: generate_cards [version] [template]"
    echo ""
    exit
fi
#
#
for ver in 99p-00p 98e-99e 96p-97p 03p-04p 03p-04p_ztt
do
  for dir in dir1 dir2 dirrap res1 res2 dir res
  do
    if [ -d $ver/$dir/$1 ]; then
      echo "Generate $1 cards in $ver/$dir/$1 with template $2"
      cd $ver/$dir/$1
      ./generate_cards $2
      cd ../../..
    fi
  done
done
